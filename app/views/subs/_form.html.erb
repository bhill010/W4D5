
<form action=" <%= action == :new ? subs_url : sub_edit_url(sub)  %>" method="post">
  <%= form_auth %>

  <input type="hidden" name="sub[moderator_id]" value="<%= current_user.id %>">

  <label for="title">Title</label>
  <input type="text" name="sub[title]" value="<%= sub.title %>" id="title">

  <label for="description">Description</label>
  <input type="text" name="sub[description]" value="<%= sub.description  %>" id="description">

  <%=  submit_button %>
</form>
